source /usr/local/share/antigen/antigen.zsh
antigen use oh-my-zsh
antigen apply

[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh
source /usr/local/opt/fzf/shell/completion.zsh
[ -f /usr/local/etc/profile.d/autojump.sh ] && . /usr/local/etc/profile.d/autojump.sh
eval "$(direnv hook zsh)"

export NVM_DIR="$HOME/.nvm"
[ -s "/usr/local/opt/nvm/nvm.sh" ] && . "/usr/local/opt/nvm/nvm.sh"

[ -f ~/.cargo/env ] && source ~/.cargo/env
unset RPROMPT
eval "$(starship init zsh)"

export PATH=$HOME/.cargo/bin:$HOME/bin:/opt/local/bin:/usr/local/texlive/2017/bin/x86_64-darwin/:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:/usr/local/MacGPG2/bin:$HOME/.antigen/bundles/robbyrussell/oh-my-zsh/lib
export MANPATH=/opt/local/man:
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8
export GOPATH="$HOME"
export EDITOR="nvim"
export VAULT_ADDR=http://127.0.0.1:8200

alias vim="nvim"
alias l='exa -l'
alias t='exa -l --tree'
alias demo-mode='unset RPROMPT && precmd(){}'
alias demo-mode-off='export precmd=$old_precmd'
alias k='kubeselect run -- '
alias ks='eval $(kubeselect select)'

eval "$(zoxide init zsh)"
export fpath=($HOME/.zsh/functions $fpath)
